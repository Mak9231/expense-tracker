<h1>All Expenses</h1>
<% if notice %>
  <p style="color: green;"><%= notice %></p>
<% end %>

<%= link_to 'New Expense', new_expense_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.title %></td>
        <td><%= number_to_currency(expense.amount) %></td>
        <td><%= expense.date.strftime("%d %b %Y") %></td>
        <td><%= expense.category %></td>
        <td>
          <%= link_to 'Show', expense_path(expense) %> |
          <%= link_to 'Edit', edit_expense_path(expense) %> |
          <%= link_to "Supprimer", expense_path(expense), data: { turbo_method: :delete, turbo_confirm: "Supprimer cette dÃ©pense ?" } %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
